<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DummyActivity">

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorVerde"

        ></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saludos"
        android:textAllCaps="true"
        android:textAppearance="@style/TextAppearance.AppCompat.Notification.Line2"
        android:textStyle="bold|italic"
        tools:text="?android:attr/candidatesTextStyleSpans" />
     <EditText
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"

         />
</android.support.constraint.ConstraintLayout>